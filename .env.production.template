# Production Environment Configuration

# ============================================
# FRONTEND CONFIGURATION
# ============================================
VITE_TMDB_API_KEY=your_production_tmdb_api_key
VITE_TMDB_BASE_URL=https://api.themoviedb.org/3
VITE_TMDB_IMAGE_BASE_URL=https://image.tmdb.org/t/p
VITE_API_BASE_URL=https://api.yourdomain.com/api

# ============================================
# BACKEND CONFIGURATION
# ============================================

# Server
PORT=5000
NODE_ENV=production

# Database (SQLite for simple deployment)
DB_PATH=/data/database.sqlite

# JWT - MUST CHANGE THESE IN PRODUCTION!
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARACTERS
JWT_EXPIRE=7d

# Session
SESSION_SECRET=CHANGE_THIS_TO_ANOTHER_SECURE_RANDOM_STRING

# Security
BCRYPT_ROUNDS=12

# CORS
FRONTEND_URL=https://yourdomain.com

# TMDB API
TMDB_API_KEY=your_production_tmdb_api_key
MOVIE_SYNC_TTL_MINUTES=60

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key
EMAIL_FROM=Movies.to <noreply@yourdomain.com>

# Logging
LOG_LEVEL=warn

# Torrent Configuration
TORRENT_PROVIDER=yts
YTS_BASE_DOMAIN=yts.mx
TORRENT_CACHE_TTL_MINUTES=10
